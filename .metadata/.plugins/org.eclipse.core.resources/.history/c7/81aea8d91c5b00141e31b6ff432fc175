  <select id="selectByLoginNameAndPassword" resultMap="BaseResultMap" parameterType="cn.goldlinked.entity.JMTUser">
	select 
    <include refid="Base_Column_List" />
    from jmt_user
    where LOGIN_NAME = #{loginName,jdbcType=VARCHAR}
    and	  PASSWORD = #{password,jdbcType=VARCHAR}
    and   STATUS=1
  </select>
  <select id="selectAllUser" resultMap="BaseResultMap">
	select 
    <include refid="Base_Column_List" />
    from jmt_user
  </select>
  <select id="selectFriendByLoginName" resultMap="BaseResultMap">
  	select 
  	<include refid="Base_Column_List" />
  	from  jmt_user
	where jmt_user.id in (
					select DISTINCT juf.FRIENDER_ID from 
					jmt_user ju,jmt_user_friendship juf
					where ju.ID=juf.USER_ID
					and juf.status=1
					and   ju.LOGIN_NAME=#{loginName,jdbcType=VARCHAR});
  </select>
